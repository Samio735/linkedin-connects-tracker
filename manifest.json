{
  "manifest_version": 3,
  "name": "Linked connects tracker",
  "description": "Linkeds connects tracker track how many connects you've sent daily to get the most of the 200 connects limit.",
  "version": "0.0.1",
  "permissions": ["storage"],
  "web_accessible_resources": ["Ding.mp3"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "128": "128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
